<%- include('../includes/header') %>
<div class="container">
  <div class="row">
    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-3 control-label" for="inputTitle">电影名字</label>
        <div class="col-sm-9">
          <input id="inputTitle" class="form-control" type="text" value="<%= moive[0].title %>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label" for="inputDoctor">导演</label>
        <div class="col-sm-9">
          <input id="inputDoctor" class="form-control" type="text" value="<%= moive[0].doctor %>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label" for="inputCountry">国家</label>
        <div class="col-sm-9">
          <input id="inputCountry" class="form-control" type="text" value="<%= moive[0].country %>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label" for="inputYear">上映年代</label>
        <div class="col-sm-9">
          <input id="inputYear" class="form-control" type="text" value="<%= moive[0].year %>">
        </div>
      </div>
       <div class="form-group">
        <label class="col-sm-3 control-label" for="inputPoster">海报地址</label>
        <div class="col-sm-9">
          <input id="inputPoster" class="form-control" type="text" value="<%= moive[0].poster %>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label" for="inputLanguage">语种</label>
        <div class="col-sm-9">
          <input id="inputLaguage" class="form-control" type="text" value="<%= moive[0].language %>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label" for="inputFlash">片源地址</label>
        <div class="col-sm-9">
          <input id="inputFlash" class="form-control" type="text" value="<%= moive[0].flash %>">
        </div>
      </div>
      
      <div class="form-group">
        <label class="col-sm-3 control-label" for="inputSummary">简介</label>
        <div class="col-sm-9">
          <input id="inputSummary" class="form-control" type="text" value="<%= moive[0].summary %>">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button class="btn btn-default" id="addOption">录入</button>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include('../includes/footer') %>