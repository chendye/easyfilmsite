
<%- include('../includes/header') %>
  <div class="content">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <% for (var i = 0; i < moive.length; i++) { %>
          <div class="col-md-2">
            <div class="thumbnail">
              <a href="/moive/<%= moive[i]._id %>">
                <img src="<%= moive[i].poster %>" alt="<%= moive[i].title %>" width="100%">
              </a>
              <div class="caption">
                <h3><%= moive[i].title %></h3>
                <p><a class="btn btn-primary" href="/moive/<%= moive[i]._id %>" role="button">预告片</a></p>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
<%- include('../includes/footer') %>